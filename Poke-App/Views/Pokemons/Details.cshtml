@model Poke_App.Models.Pokemon
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Pokemon Type: @Model.PokemonType.TypeOfPokemon</li>
    <li>HitPoints: @Model.HitPoints</li>
    <li>Stage: @Model.Stage</li>
    <li>Attack Details: @Model.AttackDetails</li>
    <li>Weakness: @Model.Weakness</li>
    <li>Resistance: @Model.Resistance</li>
    <li>Retreat Cost: @Model.Retreat</li>
</ul>

